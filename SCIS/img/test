    <script>
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
        function goHome() {
            var loc = window.location.href
            location.href = loc.substring(0, loc.lastIndexOf("/") + 1) + "home.html"
        }


        function validateName() {
            var form = document.forms[0];
            var currRow = form.firstName.parentNode.parentNode.rowIndex;

            if (document.getElementByName("firstName").value == "") {
                //alert("Please fill the First Name field");
                form.firstName.classList.add("invalid");
                updateTableRow(currRow + 1, "Error in the name format")
            } else {
                var regex = RegExp('[^a-zA-Z ]+');
                console.log(regex.test(form.firstName.value))
                if (!regex.test(form.firstName.value)) {
                    form.firstName.classList.remove("invalid");
                    form.firstName.classList.add("valid");
                    document.getElementById("errorName").innerHTML = "";
                    updateTableRow(currRow + 1, "&nbsp;")

                } else {
                    form.firstName.classList.remove("valid");
                    form.firstName.classList.add("invalid");
                    updateTableRow(currRow + 1, "Error in the name format")

                }
            }
        }

        function validatePassword() {
            var form = document.forms[0];
            var currRow = form.password.parentNode.parentNode.rowIndex;

            if (form.firstName.value == "") {
                //alert("Please fill the First Name field");
                form.firstName.classList.add("invalid");
                updateTableRow(currRow + 1, "First Name field cannot be empty!")
            } else {
                var regex = RegExp('[^a-zA-Z ]+');
                console.log(regex.test(form.firstName.value))
                if (!regex.test(form.firstName.value)) {
                    form.firstName.classList.remove("invalid");
                    form.firstName.classList.add("valid");
                    document.getElementById("errorName").innerHTML = "";
                    updateTableRow(currRow + 1, "&nbsp;")

                } else {
                    form.firstName.classList.remove("valid");
                    form.firstName.classList.add("invalid");
                    updateTableRow(currRow + 1, "Error in the name format")

                }
            }

        }

        function validatePhoneNumber() {
            var form = document.forms[0];
            var currRow = form.phoneNumber.parentNode.parentNode.rowIndex;

            if (form.phoneNumber.value == "") {
                form.phoneNumber.classList.add("invalid");
                updateTableRow(currRow + 1, "Phone Number cannot be empty!")
            } else if (form.phoneNumber.value.length != 10) {
                updateTableRow(currRow + 1, "Length of Phone Number should be 10")

            } else {
                updateTableRow(currRow + 1, "")
            }
        }

        function validateEmailId() {
            var form = document.forms[0];
            var regex = RegExp("[^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$]");
            var currRow = form.emailId.parentNode.parentNode.rowIndex;

            if (form.emailId.value == "") {
                updateTableRow(currRow + 1, "email-id cannot be empty!")
            } else if (regex.test(form.emailId.value)) {
                updateTableRow(currRow + 1, "Incorrect email-id format!")

            } else {
                updateTableRow(currRow + 1, "")
            }

        }

        function removeElement(elementId) {
            // Removes an element from the document
            var element = document.getElementById(elementId);
            element.parentNode.removeChild(element);
        }

        function removeTableRow(index) {
            document.getElementById("myTable").deleteRow(index);
        }

        function updateTableRow(index, text) {
            var table = document.getElementById("myTable");
            var cell = table.rows[index].cells[1];
            cell.innerHTML = text;
            cell.classList.add("invalidText")

        }
    </script>
